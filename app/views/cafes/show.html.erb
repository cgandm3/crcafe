<%# raise @cafe.inspect %>

<span> <%= link_to "Back to Costa Rica Cafe", cafes_path  %> </span> <br>

<!-- Show Page Description and Feature Price -->
<div class="col-md-6 col-md-offset-3">
	<h3> <%= @cafe.desc %> </h3>
	<h3> <%= @cafe.fprice %> </h3>
	
	<!-- Bring Back Show Page Large Images -->
	<div class="showimage">
		<%= image_tag(@cafe[:limg]) %>
	</div>
	
	<!--Brings Back Features on Show Page -->
	<ul>
		<% cafe = JSON.parse(@cafe.feature) %>
		<% cafe.each do |x| %>
			<li> <%= x %> </li>
		<% end %>
	</ul>
</div>

